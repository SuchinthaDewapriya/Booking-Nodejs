<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Bootstrap Dashboard</title>

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
/* ===== PRELOADER ===== */
#preloader {
  position: fixed;
  inset: 0;
  background: #fff;
  z-index: 1050;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* ===== SIDEBAR ===== */
#sidebar {
  width: 220px;
  min-height: 100vh;
  background: linear-gradient(#ff9800, #ff6f00);
}

#sidebar .nav-link {
  color: #fff;
}

#sidebar .nav-link.active,
#sidebar .nav-link:hover {
  background: rgba(255,255,255,0.2);
  color: #fff;
}

/* ===== CONTENT ===== */
.content {
  background: #fff;
  border-radius: 6px;
  padding: 20px;
}

/* ===== MOBILE FIX ===== */
@media (max-width: 768px) {
  #sidebar {
    position: fixed;
    left: -220px;
    top: 0;
    z-index: 1040;
    transition: 0.3s;
  }

  #sidebar.show {
    left: 0;
  }
}
</style>
</head>

<body class="bg-light">

<!-- PRELOADER -->
<div id="preloader">
  <div class="spinner-border text-warning" role="status"></div>
</div>

<!-- WRAPPER -->
<div class="d-flex">

  <!-- SIDEBAR -->
  <div id="sidebar" class="p-3">
    <h4 class="text-center text-white mb-4">Menu</h4>
    <ul class="nav flex-column">
      <li class="nav-item">
        <a class="nav-link active" href="#">Booking</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Users</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Details</a>
      </li>
    </ul>
  </div>

  <!-- MAIN -->
  <div class="flex-grow-1">

    <!-- TOPBAR -->
    <nav class="navbar navbar-light bg-light border-bottom px-3">
      <button class="btn btn-outline-secondary d-md-none" id="menuBtn">
        â˜°
      </button>

      <span class="navbar-brand fw-bold ms-2">MyLogo</span>

      <!-- USER DROPDOWN -->
      <div class="dropdown ms-auto">
        <button class="btn btn-light dropdown-toggle"
                type="button"
                data-bs-toggle="dropdown">
          John Doe
        </button>
        <ul class="dropdown-menu dropdown-menu-end">
          <li><a class="dropdown-item" href="#">Profile</a></li>
          <li><a class="dropdown-item" href="#">Settings</a></li>
          <li><hr class="dropdown-divider"></li>
          <li><a class="dropdown-item text-danger" href="#">Logout</a></li>
        </ul>
      </div>
    </nav>

    <!-- CONTENT -->
     <%- body %>
    <!-- CONTENT -->


  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
/* PRELOADER */
window.addEventListener("load", () => {
  document.getElementById("preloader").style.display = "none";
});

/* MOBILE SIDEBAR TOGGLE */
const menuBtn = document.getElementById("menuBtn");
const sidebar = document.getElementById("sidebar");

menuBtn.addEventListener("click", () => {
  sidebar.classList.toggle("show");
});

/* CLOSE SIDEBAR ON OUTSIDE CLICK (MOBILE) */
document.addEventListener("click", (e) => {
  if (window.innerWidth <= 768 &&
      !sidebar.contains(e.target) &&
      !menuBtn.contains(e.target)) {
    sidebar.classList.remove("show");
  }
});
</script>

</body>
</html>
